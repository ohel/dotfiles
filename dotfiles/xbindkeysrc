XF86Search

"xfce4-terminal --geometry=120x30 -e ranger"
Mod4 + r

"xfce4-terminal --working-directory=~ --title IPython -e ipython"
XF86Calculator

"claws-mail --select INBOX"
XF86Mail

"~/.scripts/launchers/chromium.sh newwindow"
Mod1 + Mod4 + w
"~/.scripts/launchers/chromium.sh"
Mod4 + w
"~/.scripts/launchers/chromium.sh"
XF86HomePage

"gvim"
Mod4 + v

