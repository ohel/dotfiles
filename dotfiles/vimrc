" Pathogen plugins.
" *****************

function InstallPathogenPlugin(bundlename, githuburl)
    if !isdirectory($VIMHOME . '/bundle/' . a:bundlename)
        echo('Downloading ' . a:bundlename . '...')
        let $pathogen_git_cmd = 'git clone https://github.com/' . a:githuburl . '.git ' . $VIMHOME . '/bundle/' . a:bundlename
        silent !$pathogen_git_cmd
    endif
endfunction

" JavaScript's Template Strings highlighting.
call InstallPathogenPlugin('vim-js-pretty-template', 'Quramy/vim-js-pretty-template')

" Better JSON(L) syntax highlighting.
let g:vim_json_syntax_conceal = 0
function ToggleJsonSyntaxConceal()
    if &l:conceallevel == 0
        setlocal conceallevel=2
        let g:vim_json_syntax_conceal = 1
        e
    else
        setlocal conceallevel=0
    endif
endfunction
call InstallPathogenPlugin('vim-json', 'elzr/vim-json')
nnoremap <leader>jc :call ToggleJsonSyntaxConceal()<cr>
nnoremap <leader>js :set syntax=json<cr>

" Pug (Jade) syntax.
call InstallPathogenPlugin('vim-pug', 'digitaltoad/vim-pug')

" Python autocompletion.
call InstallPathogenPlugin('pydiction', 'rkulla/pydiction')

" Kotlin support.
call InstallPathogenPlugin('kotlin-vim', 'udalov/kotlin-vim')

