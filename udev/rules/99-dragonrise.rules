# Set up a generic DragonRise gamepad.
# Note: If the script is always killed after a timeout, it's because of udev not being able to start processes in the background.
ACTION=="add", ENV{ID_VENDOR}=="DragonRise_Inc.", ENV{ID_MODEL}=="Generic_USB_Joystick", ENV{DEVNAME}=="*event*", SYMLINK="input/dragonrise-evdev", MODE="0664", RUN+="/usr/bin/sh /opt/udev/scripts/dragonrise.sh"
ACTION=="add", ENV{ID_VENDOR}=="DragonRise_Inc.", ENV{ID_MODEL}=="Generic_USB_Joystick", ENV{DEVNAME}=="*js*", RUN+="/usr/bin/sh /opt/udev/scripts/dragonrise_remove.sh $name"
ACTION=="remove", ENV{ID_VENDOR}=="DragonRise_Inc.", ENV{ID_MODEL}=="Generic_USB_Joystick", ENV{DEVNAME}=="*js*", RUN+="/usr/bin/sh /opt/udev/scripts/dragonrise_remove.sh"
