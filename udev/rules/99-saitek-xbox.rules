# Set up a Saitek Xbox 360 gamepad.
# Note: If the script is always killed after a timeout, it's because of udev not being able to start processes in the background.
ACTION=="add", ENV{ID_VENDOR}=="Saitek", ENV{ID_MODEL}=="Cyborg_Rumble_Pad_-_PC_Xbox_360", RUN+="/usr/bin/sh /opt/udev/scripts/saitek.sh %E{BUSNUM} %E{DEVNUM}"
ACTION=="remove", ENV{ID_VENDOR}=="Saitek", ENV{ID_MODEL}=="Cyborg_Rumble_Pad_-_PC_Xbox_360", RUN+="/usr/bin/sh /opt/udev/scripts/saitek_remove.sh"
